<div class="user text-center align-items" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),url(<%= image_path('user-banner.png') %>)">
   <h1><%= @user.first_name %> <%= @user.last_name %></h1>
</div>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="user-info">
          <h1> <%= @user.first_name %>'s skill: <%= @skill.name %> </h1>
          <p> <%= @skill.description %> </p>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="booking-card">
          <%= render 'bookings/booking_form' %>
        </div>
      </div>
    </div>
  </div>
</div>
<div id ="map" style="width: 100%; height: 400px;">
  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
      });
    <% end %>
  <% end %>
</div>






