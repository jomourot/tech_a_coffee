<!-- condition d'afichage selon les résultats trouvés -->
<div class="container">
    <div class="col-xs-6">
      <div class="top">

          <% if @found %>
            <h4>these people are experienced in <%= @skill %></h4>
          <% else %>
            <h4>Sorry, we did not find any people experienced in <%= @skill %></h4>
            <h6 class="text-center">You can try a new request:</h6>
              <form class="form-search" method="get" action="/skills">
              <input type="text" name="name" placeholder="browse skills...">
              <button type="submit">Modify</button>
              <i class="fa fa-search"></i>
              </form>
          <% end %>
        </div>
        <div class="padding"></div>
        <% @skills.each do |skill| %>
          <%= link_to user_path(skill.user) do %>
          <div class="item_list">
            <ul class="list-unstyled">
              <li><%= skill.user.first_name %> <%= skill.user.last_name %></li>
              <li><%= skill.description %></li>
            </ul>
          </div>
          <% end %>
        <% end %>
    </div>
</div>

<!-- itération sur les users -->

    <div class="col-xs-4" id ="map" style="width: 30%; height: 600px;"></div>
    <% content_for(:after_js) do %>
      <%= javascript_tag do %>
        $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(14);
            }
          });
        });
      <% end %>
    <% end %>

    <div class="col-xs-4">
      <h1>ici la carte</h1>
    </div>
  </div>
</div>




