


<h1 class="text-center"><%= @user.first_name %> <%= @user.last_name %></h1>





<section class="wrapper">
  <ul class="tabs">
    <li class="active">My cofees</li>
    <li>my pending request</li>
    <li>My information</li>
  </ul>

  <ul class="tab__content">
    <li class="active">
      <%  if @bookings.any? %>
          <% @bookings.each do |booking| %>
        <div class="content__wrapper">
          <ul class="list-unstyled text-center">
            <li><h6>You have a cofee plan on <%= booking.starts_at %> during <%= booking.duration %> minutes with <strong><%= User.find(booking.skill_id).first_name %></strong></h6> at <%= Skill.find(booking.skill_id).meeting_point %></li>
          </ul>
        </div>
          <% end %>
      <% else %>
          <h4>You don't have any bookings yet! <%= link_to "book your next cofee now!", skills_path, class:"btn btn-primary" %></h4>
        <% end %>
    </li>
    <li>
      <div class="content__wrapper">
        <ul>

        <% @skills.each do |skill| %>
          <% if skill.booking.any? %>
            <% skill.bookings.each do |booking| %>
              <li><h6><%= booking.user.first_name %> wants to meet you! on <%= booking.starts_at %> during <%= booking.duration %> minutes</h6></li>
              <% end %>
            <% else %>
              <h4>Nobody wants to meet you!</h4>
            <% end %>
        <% end %>
        </ul>

      </div>
    </li>
    <li>
      <div class="content__wrapper">
        <h2 class="text-color"></h2>


        <p>Created by <a class="text-color" href="http://lewihussey.com" target="_blank">Lewi Hussey</a></p>
      </div>
    </li>
  </ul>
</section>


