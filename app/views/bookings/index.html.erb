


<h1 class="text-center"><%= @user.first_name %> <%= @user.last_name %></h1>





<section class="wrapper">
  <ul class="tabs">
    <li class="active">My cofees</li>
    <li>my pending request</li>
    <li>My information</li>
  </ul>

  <ul class="tab__content">
    <li class="active">
      <div class="content__wrapper">
        <% @bookings.each do |booking| %>
        <ul class="list-unstyled text-center">
          <li><h6>You have a coffee plan on <%= booking.starts_at %> during <%= booking.duration %> minutes with <strong><%= User.find(booking.skill_id).first_name %></strong></h6></li>
        </ul>
        <% end %>
      </div>
    </li>
    <li>
      <div class="content__wrapper">
        <ul class="list-unstyled text-center">
        <% @skills.each do |skill| %>
          <% skill.bookings.each do |booking| %>
            <li><h6><%= booking.user.first_name %> wants to meet you! on <%= booking.starts_at %> during <%= booking.duration %> minutes</h6> <%= booking.accepted %></li>
          <% end %>
        <% end %>
        </ul>

      </div>
    </li>
    <li>
      <div class="content__wrapper">
        <h2 class="text-color"></h2>


      </div>
    </li>
  </ul>
</section>


